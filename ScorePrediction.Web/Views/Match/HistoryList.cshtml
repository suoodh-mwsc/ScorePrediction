@using ScorePrediction.Web.Models.Domain
@model IEnumerable<Match>;

@{
    ViewData["Title"] = "HistoryList";
}

<section>
    <div class="row">
        <div class="col-lg-12 col-md-12 sm-margin-30px-bottom">
            <div class="blog-style5">

                <div class="section-heading left">
                    <h4 class="text-capitalize">Past Matches</h4>
                </div>


                @if (Model == null)
                {
                    <div class="alert alert-info alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert">×</button>
                        <strong>Info!</strong> Currently you dont have any active Match in this Tournament.
                    </div>
                }
                else
                {
                }

                <div class="blog-grids">
                    <ul>
                        @foreach (var item in Model)
                        {
                            <li>
                                <div class="row">
                                    <div class="col-lg-4 col-md-4">
                                        <div class="row">
                                            <div class="col-lg-auto col-md-auto">
                                                <img src="/@Url.Content(@item.HomeTeam.Logo)" alt="" style="height: 60px; width: 60px !important;">
                                            </div>
                                            <div class="col-lg col-md my-auto">
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12">
                                                        <span class="h5 text-capitalize text-dark mb-0">@item.HomeTeam.Name</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4 my-auto">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="row">
                                                    <div class="col-lg col-md my-auto">
                                                        <span class="h6 text-success mb-0">Final Score: </span>
                                                        <span class="h4 text-capitalize text-success mb-0">4 - 1</span>
                                                    </div>
                                                    <div class="col-lg-auto col-md-auto  my-auto">
                                                        <span class="h6 text-success mb-0">Your Prediction: </span>
                                                        <span class="h4 text-capitalize text-success mb-0">4 - 1</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row justify-content-center">
                                            <div class="col-md-12 text-center">
                                                <span class="text-success ml-2"><i class="fas fa-calendar-alt"></i></span>
                                                <span class="post-date">@Convert.ToDateTime(item.StartOn).ToString("dd/MM/yyyy HH:mm")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-4 col-md-4">
                                        <div class="row">
                                            <div class="col-lg col-md my-auto text-right">
                                                <div class="row">
                                                    <div class="col-lg-12 col-md-12">
                                                        <span class="h5 text-capitalize text-dark mb-0">@item.AwayTeam.Name</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-lg-auto col-md-auto">
                                                <img src="/@Url.Content(@item.AwayTeam.Logo)" alt="" style="height: 60px; width: 60px !important;">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
