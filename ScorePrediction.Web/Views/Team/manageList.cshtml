@using System.Text.RegularExpressions;
@using ScorePrediction.Web.Models.Domain
@model List<Team>;

@{
    ViewData["Title"] = "ManageList";
}


<section class="py-5">
    <div class="row">
        <div class="col-lg-12 col-md-12 sm-margin-30px-bottom">
            <div class="blog-style5">

                <div class="section-heading left mb-4">
                    <div class="row">
                        <div class="col-lg col-md">
                            <h4 class="text-capitalize">Manage Team</h4>
                        </div>
                        <div class="col-lg-auto col-md-auto">
                            <a class="butn theme margin-15px-right xs-margin-10px-bottom px-3 py-1" asp-controller="Team" asp-action="Create">
                                <span><i class="fas fa-plus-circle margin-5px-right"></i> Add New</span>
                            </a>
                        </div>
                    </div>
                </div>

                <div class="blog-grids">
                    <div class="row">
                        <div class="col-lg-10 col-md-10">
                            <table class="table table-sm table-hover">
                                <thead class="thead-light">
                                    <tr>
                                        <th scope="col" class="text-center" style="width: 80px !important;">Logo</th>
                                        <th scope="col">Name</th>
                                        <th scope="col" class="text-center">Tournament</th>
                                        <th scope="col" style="width: 170px !important;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center" style="width: 80px !important;">
                                                <img src="/@Url.Content(@item.Logo)" alt="" style="height: 20px; width: 20px !important;">
                                            </td>
                                            <td>
                                                <span class="h6 text-dark">@item.Name</span>
                                            </td>
                                            <td class="text-center">
                                                <span class="h6 text-dark">@item.Tournament.Name</span>
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id">
                                                    <span class="text-warning mr-2">
                                                        <i class="fas fa-edit margin-5px-right"></i>
                                                    </span>
                                                </a>
                                                <a asp-action="Details" asp-route-id="@item.Id">
                                                    <span class="text-primary mr-2">
                                                        <i class="fas fa-eye margin-5px-right"></i>
                                                    </span>
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id">
                                                    <span class="text-danger mr-2">
                                                        <i class="fas fa-trash-alt margin-5px-right"></i>
                                                    </span>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="col-lg-2 col-md-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

