@using ScorePrediction.Web.Models.Domain
@model Tournament

@{
    ViewData["Title"] = "Details";
}



<section class="py-5">
    <div class="row">
        <div class="col-lg-12 col-md-12 sm-margin-30px-bottom">
            <div class="blog-style5">

                <div class="section-heading left mb-4">
                    <div class="row">
                        <div class="col-lg col-md">
                            <h4 class="text-capitalize">Tournament Details</h4>
                        </div>
                        <div class="col-lg-auto col-md-auto">
                        </div>
                    </div>
                </div>

                <div class="blog-grids">
                    <div class="row">
                        <div class="col-lg-6 col-md-6">

                            <ul class="list-group border-bottom">
                                <li class="list-group-item py-2 mb-0">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <span class="font-weight-bold">
                                                @Html.DisplayNameFor(model => model.Name)
                                            </span>
                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            @Model.Name
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item py-2 mb-0">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <span class="font-weight-bold">
                                                @Html.DisplayNameFor(model => model.StartOn)
                                            </span>
                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            @Convert.ToDateTime(@Model.StartOn).ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item py-2 mb-0">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <span class="font-weight-bold">
                                                @Html.DisplayNameFor(model => model.EndOn)
                                            </span>
                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            @Convert.ToDateTime(@Model.EndOn).ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item py-2 mb-0">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <span class="font-weight-bold">
                                                @Html.DisplayNameFor(model => model.ScorePrediction)
                                            </span>
                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            @Html.DisplayFor(model => model.ScorePrediction)
                                        </div>
                                    </div>
                                </li>
                                <li class="list-group-item py-2 mb-0">
                                    <div class="row">
                                        <div class="col-lg-4 col-md-4">
                                            <span class="font-weight-bold">
                                                @Html.DisplayNameFor(model => model.PublishedOn)
                                            </span>
                                        </div>
                                        <div class="col-lg-8 col-md-8">
                                            @Convert.ToDateTime(@Model.PublishedOn).ToString("dd/MM/yyyy HH:mm")
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>

                        <div class="col-lg-6 col-md-6">
                        </div>

                        <div class="col-lg-12 col-md-12">
                            <div class="row ml-0 mt-3">
                                <div class="col-lg-auto col-md-auto pl-0">
                                    <a class="btn btn-success" asp-action="ManageList">
                                        <span><i class="fas fa-arrow-circle-left margin-5px-right"></i> Back to List</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


